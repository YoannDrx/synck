{
  "name": "synck",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "vercel-build": "node scripts/vercel-build.js",
    "start": "next start",
    "lint": "eslint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "postinstall": "prisma generate",
    "db:reset": "node scripts/run-ts.cjs scripts/db/reset-dev.ts",
    "db:seed": "node scripts/run-ts.cjs scripts/db/seed-dev.ts",
    "db:reset:seed": "node scripts/run-ts.cjs scripts/db/reset-seed-dev.ts",
    "db:reset:prod": "node scripts/run-ts.cjs scripts/db/reset-only-prod.ts",
    "db:seed:prod": "node scripts/run-ts.cjs scripts/db/seed-prod.ts",
    "db:reset:seed:prod": "node scripts/run-ts.cjs scripts/db/reset-seed-prod.ts",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "node scripts/run-ts.cjs scripts/db/migrate-prod.ts",
    "db:generate": "prisma generate",
    "db:check": "prisma migrate diff --from-schema-datasource prisma/schema.prisma --to-schema-datamodel prisma/schema.prisma --exit-code || echo '\n⚠️  Schema drift detected. Run: pnpm db:migrate'",
    "db:status": "prisma migrate status",
    "db:status:prod": "dotenv -e .env -- prisma migrate status",
    "db:migrate:check": "prisma migrate diff --from-schema-datasource prisma/schema.prisma --to-schema-datamodel prisma/schema.prisma --exit-code",
    "test:e2e:ci": "bash -c 'E2E_PORT=${E2E_PORT:-3100}; DB_URL=${DATABASE_URL:-postgresql://postgres@localhost:5432/synck}; export DATABASE_URL=$DB_URL DIRECT_URL=${DIRECT_URL:-$DB_URL}; command -v createdb >/dev/null 2>&1 && createdb synck 2>/dev/null || true; pnpm exec prisma migrate deploy && pnpm db:seed:prod && pnpm run build || exit $?; PORT=$E2E_PORT pnpm run start >/tmp/next-e2e.log 2>&1 & APP_PID=$!; pnpm exec wait-on http://localhost:$E2E_PORT -t 60000 || { kill $APP_PID 2>/dev/null || true; cat /tmp/next-e2e.log; exit 1; }; PLAYWRIGHT_TEST_BASE_URL=http://localhost:$E2E_PORT pnpm exec playwright test; CODE=$?; kill $APP_PID 2>/dev/null || true; exit $CODE'"
  },
